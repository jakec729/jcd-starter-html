doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv="x-ua-compatible", content="ie=edge")
		title JCD Starter
		meta(name="description", content="JCD Starter")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel="stylesheet", href="assets/css/style.css")

	body
		header.site-header.navbar.navbar-clean
			include ../partials/nav.jade
			
		main.page-content
			block hero
			.container
				.row
					div.col-12.col-tb-7
						block content
					aside.sidebar.col-12.col-tb-4-split-1.col-lg-3-split-2
						include ../partials/sidebar.jade

		footer.site-footer
			div.container
				block footer-content
				section.copyright-section
					ul.list-inline
						li: h6.copyright <a class="hover-link" href="http://www.jakecooperdesign.com">Jake Cooper Design</a> &copy; 2015-2016. All rights reserved.
						li: <a href="#">JCD Starter</a> by <a href="http://www.jakecooperdesign.com">Jake Cooper Design</a>.
		
		script(src="assets/vendor/jquery/dist/jquery.min.js")
		script(src="assets/js/scripts.js")